<%- include ("../orderdetails/header.ejs"); %>


<div class="tab-pane order active in" id="orders-view" style="width: 100% ;">
    <h2 class="title text-left pb-1">Order Details</h2>
    <div class="order-details">
        <table class="order-details-table">
            <thead>
                <tr class="summary-subtotal">
                    <td>
                        <h3 class="summary-subtitle">Your Order</h3>
                    </td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="product-subtitle"><%=item.name%></td>
                    <td></td>
                </tr>
                <tr>
                    <td class="product-name">Type </td>
                    <td class="product-price"><%=item.type%></td>
                </tr>
                <tr>
                    <td class="product-name"> username </td>
                  <%if(item.status == 0) {%>
                    <td class="product-price">******</td>
                  <%} else {%>
                    <%  const valueId = item.password.split(','); %>
                    <td class="d-flex justify-content-around">
                        <div class="product-price d-flex">
                            <div class=""><%=valueId[0]%></div> 
                        </div>
                    </td>
                  <%}%>
                </tr>
                <tr>
                    <td class="product-name"> password </td>
                  <%if(item.status == 0) {%>
                    <td class="product-price">******</td>
                  <%} else {%>
                    <%  const valueId = item.password.split(','); %>
                    <td class="d-flex justify-content-around">
                        <div class="product-price d-flex">
                            <div class=""><%=valueId[1]%></div>
                        </div>
                    </td>
                  <%}%>
                </tr>
                <tr>
                    <td class="product-name"> Details </td>
                  <%if(item.status == 0) {%>
                    <td class="product-price">Empty</td>
                  <%} else {%>
                    <td class="d-flex justify-content-around">
                        <div class="product-price d-flex">
                            <div id="copyItems" >
                                <%= item.details %>
                            </div>
                            <button onclick="copyToClipboard('#copyItems')">copy</button>
                        </div>
                    </td>
                  <%}%>
                </tr>
                <tr class="summary-subtotal">
                    <td>
                        <h4 class="summary-subtitle">Amount:</h4>
                    </td>
                    <td class="summary-value font-weight-normal">N<%=item.price%></td>
                </tr>
                <tr class="summary-subtotal">
                    <td>
                        <h4 class="summary-subtitle">Payment method:</h4>
                    </td>
                    <td class="summary-value">Card</td>
                </tr>
            </tbody>
        </table>
    </div>


    <hr class="mt-0 mb-6">
    <a href="/orders" class="btn btn-dark btn-sm back-order"><i class="p-icon-arrow-long-left ml-0 mr-1"></i>Back to list</a>
</div>
</div>

<%- include ("../orderdetails/footer.ejs"); %>