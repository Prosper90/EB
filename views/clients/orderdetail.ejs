<%- include ("../orderdetails/header.ejs"); %>


<div class="tab-pane order active in" id="orders-view" style="width: 100% ;">
    <h2 class="title text-left pb-1">Order Details</h2>
    <div class="order-details">
        <table class="order-details-table">
            <thead>
                <tr class="summary-subtotal">
                    <td>
                        <h3 class="summary-subtitle">Your Order</h3>
                    </td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                <%item.map((data, index) => {%>
                 <div style="border-bottom-color: green;">

                    <tr>
                        <td class="product-name">Type </td>
                        <td class="product-price"><%=data.type%></td>
                    </tr>

                    <tr>
                        <div class="product-name"> username </div>
                        <%  const valueId = data.password.split(','); %>
                        <div class="d-flex justify-content-around">
                            <div class="product-price d-flex">
                                <div class=""><%=valueId[0]%></div> 
                            </div>
                        </div>
                    </tr>

                    <tr>
                        <div class="product-name"> password </div>
                        <div class="d-flex justify-content-around">
                            <div class="product-price d-flex">
                                <div class=""><%=valueId[1]%></div>
                            </div>
                        </div>
                    </tr>
                    <tr>
                    <td class="product-name"> Details </td>
                        <div class="d-flex justify-content-between">
                            <div class="product-price d-flex">
                                <div id="copyItems" style="width: 147px; height: 147px; overflow: auto; border: 1px solid black; border-radius: 5px;">
                                    <%= data.details %>
                                </div>
                                <div class="">
                                        <button
                                        style="background: #ff9c28; border-radius: 5px;font-size: 12px;"
                                        onclick="copyToClipboard('#copyItems')">copy</button>
                                </div>
                            </div>
                        </div>
                    </tr>

                    <tr class="summary-subtotal">
                        <td>
                            <h4 class="summary-subtitle">Amount:</h4>
                        </td>
                        <td class="summary-value font-weight-normal">N<%=data.price%></td>
                    </tr>
                  </div>
                <%})%>
            </tbody>
        </table>
    </div>


    <hr class="mt-0 mb-6">
    <a href="/orders" class="btn btn-dark btn-sm back-order"><i class="p-icon-arrow-long-left ml-0 mr-1"></i>Back to list</a>
</div>
</div>

<%- include ("../orderdetails/footer.ejs"); %>