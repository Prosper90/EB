<%- include ("../orderdetails/header.ejs"); %>


<div class="tab-pane order active in" id="orders-view" style="width: 100% ;">
    <h2 class="title text-left pb-1">Order Details</h2>
    <div class="order-details">
        <table class="order-details-table">
            <thead>
                <tr class="summary-subtotal">
                    <td>
                        <h3 class="summary-subtitle">Your Order</h3>
                    </td>
                    <td></td>
                </tr>
            </thead>
            <tbody style="overflow-y: scroll; overflow-x: hidden;">
                 <div style="border-bottom-color: green;">

                    <tr>
                        <td class="product-name">Type </td>
                        <td class="product-price"><%=item?.type%></td>
                    </tr>

                    <tr>
                        <td class="product-name"> title </td>
                        <td class="d-flex justify-content-end">
                            <div class="product-price d-flex">
                                <div class=""><%=item?.title%></div> 
                            </div>
                        </td>
                    </tr>
<!-- 
                    <tr>
                        <td class="product-name"> password </td>
                        <td class="d-flex justify-content-end">
                            <div class="product-price d-flex">
                                <div class=""></div>
                            </div>
                        </td>
                    </tr> -->

                    <tr>
                        <%= console.log(item, "items"); %>
                     <td class="product-name"> Details </td>
                        <td class="d-flex justify-content-end align-items-centers">
                            <div class="product-price d-flex" style="width: 100%; display: flex; justify-content: end; gap: 21px;">
                                <div 
                                id="copyItems" 
                                style="width: 147px; height: 68px; overflow: auto; border: 1px solid black; border-radius: 5px; text-align: center;" >
                                    <%= item?.details %>
                                </div>
                                <div class="">
                                <button
                                style="background: #ff9c28; border-radius: 5px;font-size: 12px;"
                                 id="btcCopy"
                                 onclick="copyText(`#copyItems`, '<%=item.details%>', '<%=item.names%>', '<%=item.password%>')"
                                 >copy</button>
                                </div>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td class="product-name"> usernames / emails </td>
                           <td class="d-flex justify-content-end align-items-centers">
                               <div class="product-price d-flex" style="width: 100%; display: flex; justify-content: end; gap: 21px;">
                                   <div style=" height: 40px; border: 1px solid black; border-radius: 5px; text-align: center; padding: 6px;">
                                       <%= item.names %>
                                   </div>
                               </div>
                           </td>
                       </tr>

                       <tr>
                        <td class="product-name"> Description </td>
                           <td class="d-flex justify-content-end align-items-centers">
                               <div class="product-price d-flex" style="width: 100%; display: flex; justify-content: end; gap: 21px;">
                                   <div style="border-radius: 5px;">
                                       <%= item.description%>
                                   </div>
                               </div>
                           </td>
                       </tr>
                       
                       
                    <tr class="summary-subtotal">
                        <td>
                            <h4 class="summary-subtitle">Amount:</h4>
                        </td>
                        <td class="summary-value font-weight-normal">N<%=item.price%></td>
                    </tr>
                  </div>
            </tbody>
        </table>
    </div>


    <hr class="mt-0 mb-6">
    <a href="/orders" class="btn btn-dark btn-sm back-order"><i class="p-icon-arrow-long-left ml-0 mr-1"></i>Back to list</a>
</div>
</div>

<%- include ("../orderdetails/footer.ejs"); %>