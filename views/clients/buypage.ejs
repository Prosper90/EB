<%- include ("./header.ejs"); %>

        <main class="main single-product">
            <nav class="breadcrumb-nav">
                <div class="container">
                    <div class="product-navigation">
                        <ul class="breadcrumb">
                            <li><a href="demo1.html">Home</a></li>
                            <li><a href="product-simple.html">Products</a></li>
                            <li>Default</li>
                        </ul>
                        <div class="product-image-nav">
                            <a href="#" class="product-nav product-nav-prev">
                                <figure>
                                    <img src="images/products/product-single/navigation/prev.jpg" width="150"
                                        height="150" alt="nav-prev">
                                </figure>
                                <i class="p-icon-arrow-long-left"></i>
                            </a>
                            <a href="#" class="product-nav product-nav-next">
                                <figure>
                                    <img src="images/products/product-single/navigation/next.jpg" width="150"
                                        height="150" alt="nav-next">
                                </figure>
                                <i class="p-icon-arrow-long-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
            <div class="page-content">
                <div class="container">
                    <div class="product product-single product-simple row mb-8">
                        <div class="col-md-7">
                            <div class="product-gallery">
                                <div
                                    class="product-single-carousel owl-carousel owl-theme owl-nav-inner row cols-1 gutter-no">
                                    <figure class="product-image">
                                        <!--
                                        <img src="images/products/product-single/1-800x1000.jpg"
                                            data-zoom-image="images/products/product-single/1-800x1000.jpg" alt="1"
                                            width="800" height="1000">
                                        -->
                                            <% if(item.type == "facebook") { %>
                                                <img src="images/products/facebook.png" alt="product" width="800" height="1000" />
                                            <% } else if(item.type == "twitter") { %>
                                                <img src="images/products/twitter.png" alt="product" width="800" height="1000" />
                                            <% } else if(item.type == "instagram") { %>
                                                <img src="images/products/instagram.png" alt="product" width="800" height="1000" />
                                           <% } else { %>
                                             <img src="images/products/google.png" alt="product" width="800" height="1000" />
                                             <% } %>
                                    </figure>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="product-details">
                                <h1 class="product-name"><%=item.name%></h1>
            
                                <p class="product-price mb-1">
                                    <ins class="new-price"><%=item.type%></ins>
                                </p>
                                <p class="product-short-desc">
                                    <%=item.description%>
                                </p>

                                <div class="product-variation-price">
                                    <span>$<%=item.price%></span>
                                </div>
                                <div class="product-form product-qty pt-1">
                                    <form method="post" action="/buypage" class="product-form-group">
                                        <button type="submit" class="btn-product btn-cart ls-normal font-weight-semi-bold"> <i class="p-icon-cart-solid"></i>BUY</button>
                                    </form>
                                </div>
                                <div class="product-action pt-5 pb-3">
                                    <a href="#" class="btn-product btn-compare mr-5"><i
                                            class="p-icon-compare-solid"></i>Type</a>
                                    <a href="#" class="btn-product btn-wishlist"> ADD TO WISHLIST </a>
                                </div>
                                <hr class="product-divider">

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </main>
        <!-- End Main -->
        <%- include ("./footer.ejs"); %>