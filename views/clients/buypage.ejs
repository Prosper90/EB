<%- include ("../buypagehf/header.ejs"); %>

        <main class="main single-product">
            <nav class="breadcrumb-nav">

            </nav>
            <div class="page-content">
                <div class="container">
                    <div class="product product-single product-simple row mb-8">
                        <div class="col-md-7">
                            <div class="product-gallery">
                                <div
                                    class="product-single-carousel owl-carousel owl-theme owl-nav-inner row cols-1 gutter-no">
                                    <figure class="product-image">
                                        <!--
                                        <img src="images/products/product-single/1-800x1000.jpg"
                                            data-zoom-image="images/products/product-single/1-800x1000.jpg" alt="1"
                                            width="800" height="1000">
                                        -->
                                            <% if(item.type == "facebook") { %>
                                                <img src="../images/products/facebook.png" alt="product" width="800" height="1000" />
                                            <% } else if(item.type == "twitter") { %>
                                                <img src="../images/products/twitter.png" alt="product" width="800" height="1000" />
                                            <% } else if(item.type == "instagram") { %>
                                                <img src="../images/products/instagram.png" alt="product" width="800" height="1000" />
                                           <% } else { %>
                                             <img src="../images/products/google.png" alt="product" width="800" height="1000" />
                                             <% } %>
                                    </figure>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="product-details">
                                <h1 class="product-name"><%=item.name%></h1>
            
                                <p class="product-price mb-1">
                                    <ins class="new-price"><%=item.type%></ins>
                                </p>
                                <p class="product-short-desc">
                                    <%=item.description%>
                                </p>

                                <div class="product-price">
                                    <span>N<%=item.price.toLocaleString()%></span>
                                </div>
                                <div class="product-form  pt-1">
                                    <form method="post" action="/buypage/<%=item._id%>" class="product-form-group d-flex justify-content-center align-items-center" style="background-color: #ff9c28; padding: 8px;" >
                                        <button type="submit" class="btn-product ls-normal font-weight-semi-bold"> <i class="p-icon-cart-solid"></i>BUY</button>
                                    </form>
                                </div>
                                <div class="product-action pt-5 pb-3">
                                    <a href="#" class="btn-product btn-compare mr-5"><i
                                            class="p-icon-compare-solid"></i>Password</a>
                                    <a href="#" class="btn-product btn-wishlist"> ****** </a>
                                </div>
                                <hr class="product-divider">

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </main>
        <!-- End Main -->
        
        <%- include ("../buypagehf/footer.ejs"); %>